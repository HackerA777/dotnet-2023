<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EnterpriseWarehouseClient.Views.ProductWindow"
		xmlns:vm="using:EnterpriseWarehouseClient.ViewModels"
        Title="Редактирование продукта"
		MaxHeight="500"
		MaxWidth="500"
		SizeToContent="Height">
	<Design.DataContext>
		<vm:ProductViewModel/>
	</Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/EnterpriseWarehouseStyles.axaml"/>
	</Window.Styles>

	<Grid Classes="MainGrid" RowDefinitions="Auto, *" ColumnDefinitions="Auto, *">
		<Label VerticalAlignment="Center">Наименование</Label>
		<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title}"/>

		<StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
					HorizontalAlignment="Right"
					Orientation="Horizontal">
			<Button Command="{Binding OnSubmitCommand}">ОК</Button>
			<Button Click="CancelButton_onClick">Отмена</Button>
		</StackPanel>
	</Grid>
</Window>
