<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EnterpriseWarehouseClient.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EnterpriseWarehouseClient.Views.MainWindow"
        Icon="/Assets/products-icon.png"
        Title="Продукты">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	
	<Window.Styles>
		<StyleInclude Source="/EnterpriseWarehouseStyles.axaml"/>
	</Window.Styles>

	<Grid Classes="MainGrid" RowDefinitions="Auto, *">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button Classes="ToolButton" Command="{Binding OnAddCommand}">
				<Image Source="/Assets/add-icon.png"/>
			</Button>
			<Button Classes="ToolButton" Command="{Binding OnChangeCommand}">
				<Image Source="/Assets/edit-icon.png"/>
			</Button>
			<Button Classes="ToolButton" Command="{Binding OnDeleteCommand}">
				<Image Source="/Assets/delete-icon.png"/>
			</Button>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="False"
				  Items="{Binding Products}" SelectedItem="{Binding	SelectedProduct}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Код товара" Binding="{Binding ItemNumber}"/>
			</DataGrid.Columns>
			<DataGrid.Columns>
			    <DataGridTextColumn Header="Наименование" Binding="{Binding	Title}"/>
			</DataGrid.Columns>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Количество товара" Binding="{Binding Quantity}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>

</Window>
